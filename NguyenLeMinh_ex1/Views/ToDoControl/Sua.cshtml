@model Todo

<h2>Sửa công việc</h2>

<form asp-action="Sua" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Tên công việc</label>
        <input asp-for="TenCongViec" />
    </div>

    <div>
        <label>Mô tả</label>
        <textarea asp-for="MoTa"></textarea>
    </div>

    <div>
        <label>Hoàn thành</label>
        <input asp-for="HoanThanh" type="checkbox" />
    </div>

    <button type="submit">Cập nhật</button>
</form>
